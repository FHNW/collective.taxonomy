<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.taxonomy">
  <body>

    <metal:content-core fill-slot="content">
      <metal:content-core define-macro="content">
        <div id="content">
          <div id="content-core">
            <h1>Taxonomies</h1>

            <h2>Existing taxonomies</h2>

            <table class="listing">
              <thead>
                <th>Name</th>
                <th>Title</th>
                <th>Action</th>
              </thead>
              <tbody>
                <tr tal:repeat="taxonomy view/taxonomies">
                  <td tal:content="taxonomy/name"/>
                  <td tal:content="taxonomy/title"/>
                  <td>
                    <a tal:attributes="href string:${here/portal_url}/++taxonomy++edit.${taxonomy/name}">
                      Edit
                    </a>
                    |
                    <a tal:attributes="href string:${here/portal_url}/++taxonomy++delete.${taxonomy/name}">
                      Delete
                    </a>
                  </td>
                </tr>
              </table>
            </div>
          </div>

          <h2>Add taxonomy</h2>
          Click 
          <a tal:attributes="href string:${here/portal_url}/++taxonomy++add">here</a>
          to add a new taxonomy

        </metal:content-core>
      </metal:content-core>

    </body>
  </html>

