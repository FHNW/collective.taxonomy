<div id="" class=""
      tal:attributes="id view/id;
                      class view/klass;
                      style view/style;
                      title view/title;
                      lang view/lang;
                      onclick view/onclick;
                      ondblclick view/ondblclick;
                      onmousedown view/onmousedown;
                      onmouseup view/onmouseup;
                      onmouseover view/onmouseover;
                      onmousemove view/onmousemove;
                      onmouseout view/onmouseout;
                      onkeypress view/onkeypress;
                      onkeydown view/onkeydown;
                      onkeyup view/onkeyup"><tal:block
      condition="view/value"
/>
<tal:items repeat="item python:view.items.values()">
  <ul>
    <li tal:condition="python:item['checked'] or item['has_children']">
      <span tal:content="item/label" tal:attributes="class python:not item['checked'] and 'discreet' or ''" />
      <ul tal:condition="item/children">
	<tal:subitems repeat="subitem item/children">
	  <li tal:condition="subitem/checked" tal:content="subitem/label">
	  </li>
	</tal:subitems>
      </ul>
    </li>
  </ul>
</tal:items>
</div>
